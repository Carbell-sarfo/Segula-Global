<style lang="scss">
  .section-hero {
    width: 100%;
    height: 100%;
    min-height: 100vh;
    background-image: url(/home-bg.png);
    background-size: cover;
    background-position: center;
    color: #fff;

    .hero-text {
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      text-align: center;
    }
  }



  // Secction About
  .section-about {
    background-color: var(--clr-green);
    color: var(--clr-white);
    padding: 8rem 0;
  }

  .mission {
    background-color: var(--clr-yellow);
    color: var(--clr-green-dark);
    padding: 2rem;
    padding-bottom: 3rem;
    border-radius: 1rem;
    position: relative;
    z-index: 1;
    text-align: center;
    overflow: hidden;

    &.right {

      &::after {

        left: -2.5rem;
      }
    }
    &.left {

      &::after {

        right: -2.5rem;
      }
    }

    &::after {
      content: "";
      width: 5rem;
      height: 5rem;
      border-radius: 50%;
      background-color: var(--clr-green);
      position: absolute;
      bottom: -2.5rem;
      // right: 0;
    }
  }





  // Section services, what we do
  .section-service {
    padding-top: 8rem;
    padding-bottom: 15rem;
    background-color: var(--clr-green-dark);
    color: var(--clr-white);
    width: 100%;
  }
  .service {
    text-align: center;
    position: relative;
    z-index: 1;
    color: #fff;

    &-plus {
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--clr-green-dark);
      background-color: var(--clr-yellow);
      width: 3rem;
      height: 3rem;
      border-radius: 50%;
      position: absolute;
      top: -1.5rem;
      left: 50%;
      transform: translateX(-50%);
      transition: .2s;
      border: 1px solid transparent;

      &:hover, &:focus {
        color: var(--clr-yellow);
        background-color: var(--clr-green-dark);
        border: 1px solid var(--clr-yellow);
        transform: translateX(-50%) rotateZ(45deg)
      }
    }

    &-img {
      width: 100%;
      top: 0;
      left: 0;
    }
  }
</style>