<style lang="scss">


.section-hero {
    width: 100%;
    height: 100%;
    min-height: 100vh;
    background-image: url(/linkedin-bg.png);
    background-size: cover;
    background-position: center;
    color: #fff;

    .hero-text {
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      text-align: center;
    }
  }






.section-offers {
    background-color: var(--clr-green);
    color: #fff;

    .offer {
        padding: 1rem;

        h3 {
            font-weight: bold;
            font-size: 1.6rem;
            line-height: 1.4;
            margin-bottom: 1rem
        }
    }

    .offer.second {
        border-inline: 1px solid #90D0C2;
    }
}
@media screen and (max-width: 767px) {
    .section-offers .offer.second {
        border-inline: none;

    }
}




//  Section Process
.section-process {
    background-color: #90D0C2;
    padding: 8rem 0;
}

.ui-accordion-header {
    border-bottom: 1px solid #4a4a4a;
    margin-bottom: 2rem;
    background-color: var(--clr-green-dark);
    color: #90D0C2;

    &:hover {
        color: var(--clr-yellow);
    }
}
.ui-accordion-header:where(.ui-active) {
    color: yellow;
}
.ui-accordion-body {
    background-color: var(--clr-green-dark);
    color: #fff;
    margin-top: -30px;
    margin-bottom: 10px;
    border-radius: 0 0 10px 10px;
}
</style>